@page "/CmptTemplate4"

@using Recruitment_Angels.Models
@code {
    [Parameter]
    public HashSet<WorkExperienceTable> SelectedWorkExperience { get; set; }

    [Parameter]
    public HashSet<QualificationsTable> SelectedQualifications { get; set; }
    [Parameter]
    public HashSet<ApplicantSkillsTable> SelectedApplicantSkills { get; set; }
    [Parameter]
    public HashSet<Table> Personalinfo { get; set; }
    [Parameter]
    public HashSet<referenceTable> SelectedReferences { get; set; }
}
<div style="height:100%;width:100%">
    <div style="height:3%;width:100%;background-color:#122d7d">
    </div>
    <div style="display: flex;width:100%;height:94%;padding-right:calc(2vh + 5%);padding-left:calc(2vh + 5%)">
        @*===================
        LEFT BAR
        ===================*@
        <div style="height:100%;width:40%;padding-right:calc(1vh + 5%)">
            <div style="display: flex; align-items: center; justify-content: center;padding-top: calc(2vh + 5%);">
                <div style="width: 70%; border: clamp(1px, 0.5vw, 7px) solid #cbcdcf; border-radius: 50%; overflow: hidden;">
                    <img src="../Images/user.png" alt="Your Image" style="width: 100%; height: 100%; object-fit: cover;">
                </div>
            </div>
            @*===================
            CONTACT ME
            ===================*@
            @if (Personalinfo.Count > 0)
            {
                <div style="border-bottom: 1px solid #cbcdcf;height: calc(0.1vh + 2%);width:100%;padding-top: calc(2vh + 2%);">
                </div>
                <div style="display: flex; align-items: center; justify-content: center; padding-top: calc(0.4vh + 2%);padding-bottom: calc(0.4vh + 2%);">
                    <div style="width: 100%; font-size: calc(1.5vh + 5%); overflow: hidden; height: calc(1.5vh + 5%); color: #6a6c6e; text-align: left; font-weight:bold; font-family: 'Arial', sans-serif; font-variant: small-caps;color:#122d7d ">
                        CONTACT ME
                    </div>
                </div>
                <div style="border-bottom: 1px solid #cbcdcf;width:100%;">
                </div>
                <div style="display: flex; align-items: center; justify-content: center; padding-top: calc(2vh + 2%);">
                    <div style="width: 100%; font-size: calc(0.9vh + 4%); overflow: hidden; height: calc(1.5vh + 4%); color: #6a6c6e; text-align: left; font-weight: bold;margin: 0 auto;">
                        @if (Personalinfo.Count > 0)
                        {
                            var firstRows = Personalinfo.FirstOrDefault();
                            @firstRows.PhoneNumber
                        }
                    </div>
                </div>
                <div style="display: flex; align-items: center; justify-content: center; padding-top: calc(2vh + 2%);">
                    <div style="width: 100%; font-size: calc(0.9vh + 4%); overflow: hidden; height: calc(1.5vh + 4%); color: #6a6c6e; text-align: left; font-weight: bold;margin: 0 auto;">
                        @if (Personalinfo.Count > 0)
                        {
                            var firstRows = Personalinfo.FirstOrDefault();
                            @firstRows.Email
                        }
                    </div>
                </div>
            }
            @*===================
            EDUCATION
            ===================*@
            @if (SelectedQualifications.Count > 0)
            {
                <div style="display: flex; align-items: center; justify-content: center; padding-top: calc(2vh + 3%);padding-bottom: calc(0.4vh + 2%);">
                    <div style="width: 100%; font-size: calc(1.5vh + 5%); overflow: hidden; height: calc(1.5vh + 5%); color: #6a6c6e; text-align: left; font-weight:bold; font-family: 'Arial', sans-serif; font-variant: small-caps;color:#122d7d ">
                        EXPERIENCE
                    </div>
                </div>
                <div style="border-bottom: 1px solid #cbcdcf;width:100%;">
                </div>
                @foreach (var qual in SelectedQualifications)
                {
                    <div style="display: flex; align-items: center; justify-content: center; padding-top: calc(0.5vh + 2%);">
                        <div style="width: 100%; font-size: calc(0.9vh + 4%); overflow: hidden; height: calc(1.5vh + 4%); text-align: left; font-weight: bold;margin: 0 auto;">
                            <div style="padding-bottom: calc(0.5vh + 2%);">
                                @((qual.AcquiredDate).ToString("yyyy-MM-dd"))
                            </div>
                            <div style="">
                                @qual.Institution  <br />
                                <div style="font-weight: 800 !important;">
                                    @qual.Qualification <br />
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            @*===================
            SKILLS
            ===================*@
            @if (SelectedApplicantSkills.Count > 0)
            {
                <div style="display: flex; align-items: center; justify-content: center; padding-top: calc(2vh + 3%);padding-bottom: calc(0.4vh + 2%);">
                    <div style="width: 100%; font-size: calc(1.5vh + 5%); overflow: hidden; height: calc(1.5vh + 5%); color: #6a6c6e; text-align: left; font-weight:bold; font-family: 'Arial', sans-serif; font-variant: small-caps;color:#122d7d ">
                        SKILLS
                    </div>
                </div>
                <div style="border-bottom: 1px solid #cbcdcf;width:100%;">
                </div>
                @foreach (var qual in SelectedApplicantSkills)
                {
                    <div style="display: flex; align-items: center; justify-content: center; padding-top: calc(0.5vh + 2%);">
                        <div style="width: 100%; font-size: calc(0.9vh  + 4%); overflow: hidden; height: calc(1.5vh + 4%); color: #6a6c6e; text-align: left; font-weight: bold;margin: 0 auto;">
                            <Li> @qual.SkillName</Li>
                        </div>
                    </div>
                }
                <div style="border-bottom: 1px solid #6d5957;height: calc(0.1vh + 2%);width:80%;">
                </div>
            }
        </div>
        @*===================
        RIGHT SIDE
        ===================*@
        <div style="width:60%;">
            @*===================
            NAME AND SURNAME
            ===================*@
            @if (Personalinfo.Count > 0)
            {
                <div style="width:100%;margin:auto;">
                    <div style="padding-top: calc(2vh + 5%);">
                        <div style="font-size: calc(2.5vh + 4%); line-height: calc(4vh + 4%); overflow: hidden; height: calc(1.5vh + 4%); color:#122d7d; text-align: left; font-weight: 600;">
                            @if (Personalinfo.Count > 0)
                            {
                                var firstRows = Personalinfo.FirstOrDefault();
                                <span style="margin-right: calc(1vh + 4%)">@firstRows.Name</span>

                                <span>@firstRows.Surname</span>
                            }
                        </div>
                    </div>
                    <div style="font-size: calc(1.2vh + 4%);line-height: calc(1.6vh + 4%); overflow: hidden;color:#6d5957; text-align: left;">
                        @if (Personalinfo.Count > 0)
                        {
                            var firstRows = Personalinfo.FirstOrDefault();
                            @firstRows.JobTitle.ToUpper()
                        }
                    </div>
                </div>
                <div style="background-color:#122d7d;height:calc(0.01vh + 1%);width:20%;border-radius:50px;margin-top:calc(0.1vh + 3%);">
                </div>
            }
            @*===================
            PROFILE
            ===================*@
            @if (Personalinfo.Count > 0)
            {
                <div style="border-bottom: 1px solid #cbcdcf;height: calc(0.1vh + 2%);width:100%;padding-top: calc(4vh + 3%);">
                </div>
                <div style="display: flex; align-items: center; justify-content: center; padding-top: calc(0.3vh + 2%);padding-bottom: calc(0.4vh + 2%);">
                    <div style="width: 100%; font-size: calc(1.5vh + 5%); overflow: hidden; height: calc(1.5vh + 5%); color: #6a6c6e; text-align: left; font-weight:bold; font-family: 'Arial', sans-serif; font-variant: small-caps;color:#122d7d ">
                        PROFILE
                    </div>
                </div>
                <div style="border-bottom: 1px solid #cbcdcf;width:100%;">
                </div>
                <div style="display: flex; align-items: center; justify-content: center; padding-top: calc(2vh + 2%);">
                    <div style="width: 100%; font-size: calc(0.9vh + 4%); overflow: hidden; height: calc(1.5vh + 4%); color: #6a6c6e; text-align: left; font-weight: bold;margin: 0 auto;">
                        @if (Personalinfo.Count > 0)
                        {
                            var firstRows = Personalinfo.FirstOrDefault();
                            @firstRows.CandidateDescription
                        }
                    </div>
                </div>
            }
            @*===================
            WORK EXPERIENCE
            ===================*@
            @if (SelectedWorkExperience.Count > 0)
            {
                <div style="display: flex; align-items: center; justify-content: center; padding-top: calc(2vh + 3%);padding-bottom: calc(0.4vh + 2%);">
                    <div style="width: 100%; font-size: calc(1.5vh + 5%); overflow: hidden; height: calc(1.5vh + 5%); color: #6a6c6e; text-align: left; font-weight:bold; font-family: 'Arial', sans-serif; font-variant: small-caps;color:#122d7d ">
                        EXPERIENCE
                    </div>
                </div>
                <div style="border-bottom: 1px solid #cbcdcf;width:100%;">
                </div>
                @foreach (var qual in SelectedWorkExperience)
                {
                    <div style="display: flex; align-items: center; justify-content: center; padding-top: calc(0.5vh + 2%);">
                        <div style="width: 100%; font-size: calc(0.9vh + 4%); overflow: hidden; height: calc(1.5vh + 4%); color: #6a6c6e; text-align: left; font-weight: bold;margin: 0 auto;">
                            <div style="padding-bottom: calc(0.5vh + 2%)">
                                @((qual.StartDate).ToString("yyyy-MM-dd")) - @((qual.EndDate).ToString("yyyy-MM-dd"))
                            </div>
                            <div style="font-weight: 800 !important;">
                                @qual.PositionTitle
                            </div>
                            <div style="padding-bottom: calc(0.5vh + 2%)">
                                @qual.CompanyName | @qual.CompanyLocation
                            </div>
                            @qual.Summary <br />
                        </div>
                    </div>
                }
            }
        </div>
    </div>
    <div style="height:3%;width:100%;background-color:#333132">
    </div>
</div>
